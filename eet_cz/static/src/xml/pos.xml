<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-extend="OrderReceipt">
        <t t-jquery=".pos-receipt-contact" t-operation="after">
            <div class="eet-header">
                <t t-foreach="widget.gui.pos.db.eet_details" t-as="eet_key">
                    <t t-if="eet_key === order.name">
                        <t t-foreach="eet_key_value" t-as="data_key">
                            <t t-if="data_key === 'vat'">
                                <t t-foreach="data_key_value" t-as="vat">
                                    <t t-if="vat and vat != receipt.company.vat">
                                        <div>Auth. VAT: <t t-esc="vat"/></div>
                                    </t>
                                </t>
                            </t>
                            <t t-if="data_key === 'auth_vat'">
                                <t t-foreach="data_key_value" t-as="auth_vat">
                                    <t t-if="auth_vat">
                                        <div>Appointing Taxpayer Tax ID: <t t-esc="auth_vat"/></div>
                                    </t>
                                </t>
                            </t>
                            <t t-if="data_key === 'estd_reg_no'">
                                <t t-foreach="data_key_value" t-as="estd_reg_no">
                                    <t t-if="estd_reg_no">
                                        <div>Premises ID: <t t-esc="estd_reg_no"/></div>
                                    </t>
                                </t>
                            </t>
                        </t>
                    </t>
                </t>
            </div>
        </t>
        <t t-jquery=".pos-receipt-order-data" t-operation="after">
            <div class="eet-footer">
                <t t-foreach="widget.gui.pos.db.eet_details" t-as="eet_key">
                    <t t-if="eet_key === order.name">
                        <t t-foreach="eet_key_value" t-as="data_key">
                            <t t-if="data_key === 'sale_regime'">
                                <t t-foreach="data_key_value" t-as="regime">
                                    <t t-if="regime === '0'">
                                        <div>Sale regime: Regular</div>
                                    </t>
                                    <t t-elif="regime === '1'">
                                        <div>Sale regime: Simplified</div>
                                    </t>
                                </t>
                            </t>
                            <t t-if="data_key === 'fik'">
                                <div><b>FIK</b></div>
                                <t t-foreach="data_key_value" t-as="code">
                                    <t t-esc="code"/>
                                </t>
                            </t>
                            <t t-if="data_key === 'bkp'">
                                <div><b>BKP</b></div>
                                <t t-foreach="data_key_value" t-as="code">
                                    <div><t t-esc="code"/></div>
                                </t>
                            </t>
                            <t t-if="data_key === 'pkp'">
                                <div><b>PKP</b></div>
                                <t t-foreach="data_key_value" t-as="code">
                                    <div><t t-esc="code"/></div>
                                </t>
                            </t>
                        </t>
                    </t>
                </t>
            </div>
        </t>
    </t>
</templates>
